<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_list"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ShoppingListActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_entry_link"
        style="@style/AddText"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Dodaj nowy produkt" />

    <TextView
        android:id="@+id/add_category_link"
        style="@style/AddText"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Dodaj nową kategorię" />

    <ExpandableListView
        android:id="@+id/expandable_shopping_list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
</LinearLayout>
