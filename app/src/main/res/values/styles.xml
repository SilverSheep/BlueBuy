<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="PrimaryText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AddText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/addText</item>
    </style>

    <style name="RemoveText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/removeText</item>
    </style>

    <style name="SecondaryText" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
